{
	"name": "@savvy-web/silk-sync-action",
	"version": "0.1.1",
	"private": true,
	"description": "GitHub Action to synchronize settings for repos using the Silk Suite system",
	"keywords": [
		"github-action",
		"repository-settings",
		"label-sync",
		"github-projects",
		"organization-management",
		"silk-suite"
	],
	"homepage": "https://github.com/savvy-web/silk-sync-action#readme",
	"bugs": {
		"url": "https://github.com/savvy-web/silk-sync-action/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/savvy-web/silk-sync-action.git"
	},
	"license": "MIT",
	"author": {
		"name": "C. Spencer Beggs",
		"email": "spencer@savvyweb.systems",
		"url": "https://savvyweb.systems"
	},
	"type": "module",
	"scripts": {
		"build": "turbo run build:prod --log-order=grouped --log-prefix=none",
		"build:inspect": "rslib inspect --config-loader native --env-mode npm --verbose",
		"build:prod": "github-action-builder build",
		"ci:build": "CI=\"true\" turbo run build:prod --log-order=grouped --log-prefix=none --output-logs=full",
		"ci:test": "CI=\"true\" vitest run --coverage",
		"ci:version": "savvy-changesets version && biome format --write .",
		"commit:check": "savvy-commit check",
		"commit:init": "savvy-commit init",
		"generate:schema": "node lib/scripts/generate-schema.ts && biome format --write silk.config.schema.json",
		"lint": "biome check --max-diagnostics=none",
		"lint:fix": "biome check --write --max-diagnostics=none",
		"lint:fix:unsafe": "biome check --write --unsafe --max-diagnostics=none",
		"lint:md": "markdownlint-cli2 '**/*.{md,mdx}' --config './lib/configs/.markdownlint-cli2.jsonc'",
		"lint:md:fix": "markdownlint-cli2  --config './lib/configs/.markdownlint-cli2.jsonc' --fix",
		"prepare": "husky",
		"test": "vitest run --pass-with-no-tests",
		"test:coverage": "vitest run --coverage --pass-with-no-tests",
		"test:watch": "vitest --watch --pass-with-no-tests",
		"typecheck": "turbo run types:check --log-prefix=none --log-order=grouped",
		"types:check": "tsgo --noEmit",
		"validate": "github-action-builder validate"
	},
	"dependencies": {
		"@actions/core": "^3.0.0",
		"@actions/github": "^9.0.0",
		"@effect/platform": "^0.94.4",
		"@effect/platform-node": "^0.104.1",
		"@octokit/auth-app": "^8.2.0",
		"@octokit/request": "^10.0.7",
		"@octokit/rest": "^22.0.1",
		"effect": "^3.19.16"
	},
	"devDependencies": {
		"@savvy-web/changesets": "^0.1.1",
		"@savvy-web/commitlint": "^0.3.3",
		"@savvy-web/github-action-builder": "^0.1.4",
		"@savvy-web/lint-staged": "^0.4.5",
		"@types/node": "catalog:silk",
		"@typescript/native-preview": "catalog:silk",
		"@vitest/coverage-v8": "catalog:silk",
		"turbo": "catalog:silk",
		"typescript": "catalog:silk",
		"vitest": "catalog:silk"
	},
	"packageManager": "pnpm@10.30.0+sha512.2b5753de015d480eeb88f5b5b61e0051f05b4301808a82ec8b840c9d2adf7748eb352c83f5c1593ca703ff1017295bc3fdd3119abb9686efc96b9fcb18200937",
	"devEngines": {
		"packageManager": {
			"name": "pnpm",
			"version": "10.30.0",
			"onFail": "ignore"
		},
		"runtime": [
			{
				"name": "node",
				"version": "24.11.0",
				"onFail": "ignore"
			}
		]
	}
}
